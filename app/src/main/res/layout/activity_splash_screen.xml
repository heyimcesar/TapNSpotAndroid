<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/splash_screen_margin_vertical"
    android:paddingLeft="@dimen/splash_screen_margin_horizontal"
    android:paddingRight="@dimen/splash_screen_margin_horizontal"
    android:paddingTop="@dimen/splash_screen_margin_vertical"
    android:weightSum="1"
    android:orientation="horizontal"
    tools:context="com.bluephoenixteam.tapnspot.SplashScreenActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2">

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageview_splash_screen_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/company_logo_splash_screen"
        android:layout_weight="0.6"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2">

    </RelativeLayout>

</LinearLayout>
